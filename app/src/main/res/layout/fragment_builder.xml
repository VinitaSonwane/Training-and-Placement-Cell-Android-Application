<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.resumebuilder.builderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Image of Resume Builder -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/resumebuilder"
            android:layout_gravity="center"/>

        <!-- Text Description -->

        <!-- Additional Details about Creating Resume -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create a professional resume with our Resume Builder. Follow these steps:"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. Start by providing your personal information, including your full name, contact details, and professional summary."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2. Enter your educational background, including degrees, institutions, and graduation years."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3. Detail your work experience, specifying your job roles, companies, and relevant accomplishments."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4. Highlight your skills, both technical and soft skills, to showcase your qualifications."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5. Include any certifications, licenses, or additional qualifications that enhance your profile."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6. Use action verbs and quantify achievements to make your resume impactful and results-oriented."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7. Optimize the formatting and layout for readability, ensuring a clean and professional appearance."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8. Proofread your resume to eliminate any grammatical errors or typos before finalizing."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9. Tailor your resume for each job application, emphasizing relevant skills and experiences."
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10. Save and export your resume in a preferred format, such as PDF, for easy sharing with employers."
            android:layout_marginTop="8dp"/>


        <TextView
            android:id="@+id/nav_resume_builder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:text="Click here to explore the Resume Builder"
            android:textColor="?attr/colorAccent"
            android:textStyle="bold" />


    </LinearLayout>

    </ScrollView>

</FrameLayout>
